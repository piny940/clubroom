%h1 Talk_entry一覧
%table.table
  %thead.thead-light
    %tr
      %th Talkroom
      %th User
      %th

  %tbody
    %tr
      %td{colspan: 3}= link_to 'Talk_entry新規作成', new_admin_talk_entry_path, class: 'btn btn-primary w-100'
    - @talk_entries.each do |talk_entry|
      %tr
        %td= talk_entry.talkroom_id
        %td= talk_entry.user_id
        %td
          = link_to '閲覧', admin_talk_entry_path(talk_entry), class: 'btn btn-sm btn-outline-primary'
          = link_to '編集', edit_admin_talk_entry_path(talk_entry), class: 'btn btn-sm btn-outline-primary'
          = link_to '削除', admin_talk_entry_path(talk_entry), method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-sm btn-outline-danger'
