= form_with(model: [:admin, talk]) do |form|
  - if talk.errors.any?
    #error_explanation
      %h2= "#{pluralize(talk.errors.count, "error")} prohibited this talk from being saved:"
      %ul
        - talk.errors.full_messages.each do |message|
          %li= message
  
  .row.mb-3
    .col-md-3.col-form-label.fw-bold user_id
    .col-md-9= form.text_field :user_id, class: 'form-control'
  .row.mb-3
    .col-md-3.col-form-label.fw-bold talkroom_id
    .col-md-9= form.text_field :talkroom_id, class: 'form-control'
  .row.mb-3
    .col-md-3.col-form-label.fw-bold content
    .col-md-9= form.text_area :content, class: 'form-control'
  .row
    .col
      = form.submit '保存', class: 'btn btn-primary d-block w-100'
